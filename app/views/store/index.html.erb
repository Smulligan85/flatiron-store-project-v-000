<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>
<ul>
  <% @items.each do |item| %>
    <% if item.inventory > 0 %>
      <li><%= item.title %></li>
      <li><%= number_to_currency(item.price.to_f/100) %></li>
      <%= button_to 'Add to Cart', line_items_path(item_id: item) %>
    <% end %>
  <% end %>
</ul>
